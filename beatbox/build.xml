<project name="BeatBox" basedir="." default="run">
    <target name="clean">
        <delete dir="build" />
    </target>

    <target name="compile" >
        <mkdir dir="build/classes" />
        <javac srcdir="src" destdir="build/classes" />
    </target>

    <target name="jar" >
        <mkdir dir="build/jar" />
        <jar destfile="build/jar/BeatBox.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="test/BeatTest" />
            </manifest>
        </jar>
    </target>

    <target name="run" depends="compile, jar">
        <java jar="build/jar/BeatBox.jar" fork="true" />
    </target>

</project>
